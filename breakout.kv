#:kivy 1.0

<GameEndPopup>:
    size_hint: 0.8, 0.4
    auto_dismiss: False
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        
        Label:
            text: root.message
            markup: True
            font_size: 24
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: 0.3
            
            Button:
                text: 'Play Again'
                on_press: root.game.reset(); root.game.start(); root.dismiss()
            
            Button:
                text: 'Quit'
                on_press: app.stop()